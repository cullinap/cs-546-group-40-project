<article>
  <div class="container">
    <div class="row">
      <div class="col">
        {{#if pfp}}
          <img
            id="myprofile-pfp"
            alt="Profile Picture"
            class="profile-img"
            src="{{pfp}}"
          />
        {{else}}
          <img
            id="myprofile-pfp"
            alt="Profile Picture"
            class="profile-img"
            src="/public/img/no_image.jpeg"
          />
        {{/if}}
      </div>
      <div class="col">
        <h2 class="text">Name</h2>
        {{#if firstname}}
          <p id="myprofile-name" class="text">{{firstname}} {{lastname}}</p>
        {{else}}
          <p id="myprofile-name" class="text">None</p>
        {{/if}}
        <h2 class="text">Username</h2>
        <p id="myprofile-usn" class="text">{{username}}</p>
        <h2 class="text">Email</h2>
        <p id="myprofile-em" class="text">{{email}}</p>
      </div>
      <div class="col">
        <div class="row mb-3 text">
          <a href="/" class="btn btn-primary text">Home</a>
          <a href="/logout" class="btn btn-primary text">Logout</a>
        </div>
        <div class="row">
          <button id="myprofile-pfpButton" class="btn btn-primary text">Change
            Profile Picture</button>
        </div>
        <div class="row">
          <button id="myprofile-nameButton" class="btn btn-primary text">Change
            Name</button>
        </div>
        <div class="row">
          <button id="myprofile-usnButton" class="btn btn-primary text">Change
            Username</button>
        </div>
        <div class="row">
          <button id="myprofile-emButton" class="btn btn-primary text">Change
            Email</button>
        </div>
        <div class="row">
          <button id="myprofile-pwdButton" class="btn btn-primary text">Change
            Password</button>
        </div>
      </div>
      <div class="col">
        <h2 class="text">Posts</h2>
        {{#if posts}}
          <ul>
            {{#each posts}}
              <li><a
                  href="/forum/discussion/{{discussionId}}"
                  class="text link"
                >{{content}}</a></li>
            {{/each}}
          </ul>
        {{else}}
          <p class="text">None</p>
        {{/if}}
      </div>
      <div class="row align-items-center">
        <div class="col">
          <div id="myprofile-changepfp" hidden>
            <form id="pfp-form">
              <label for="pfpurl" class="text">Enter your new profile picture's
                URL:</label>
              <input
                type="text"
                name="pfpurl"
                id="pfpurl"
                placeholder="URL"
                class="text"
              />
              <button type="submit" class="text">Submit</button>
            </form>
          </div>
          <div id="myprofile-changename" hidden>
            <form id="name-form">
              <label for="firstname" class="text">Enter your first name:</label>
              <input
                type="text"
                name="firstname"
                id="firstname"
                placeholder="First name"
                class="text"
              />
              <label for="lastname" class="text">Enter your last name:</label>
              <input
                type="text"
                name="lastname"
                id="lastname"
                placeholder="Last name"
                class="text"
              />
              <button type="submit" class="text">Submit</button>
            </form>
          </div>
          <div id="myprofile-changeusername" hidden>
            <form id="usn-form">
              <label for="username" class="text">Enter your new username:</label>
              <input
                type="text"
                name="username"
                id="username"
                placeholder="Username"
                class="text"
              />
              <button type="submit" class="text">Submit</button>
            </form>
          </div>
          <div id="myprofile-changeemail" hidden>
            <form id="em-form">
              <label for="email" class="text">Enter your new email:</label>
              <input
                type="text"
                name="email"
                id="email"
                placeholder="Email"
                class="text"
              />
              <button type="submit" class="text">Submit</button>
            </form>
          </div>
          <div id="myprofile-changepassword" hidden>
            <form id="pwd-form">
              <label for="password" class="text">Enter your new password:</label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                class="text"
              />
              <button type="submit" class="text">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"
  ></script>
  <script src="/public/js/profile.js"></script>
</article>